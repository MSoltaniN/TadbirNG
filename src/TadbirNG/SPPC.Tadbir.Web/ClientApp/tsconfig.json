{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
	"sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "es2015",
    "baseUrl": "src",
    "paths": {
      "*": [ "types/*" ],
      "@sppc/*": [
        "app/*"
      ],
      "@sppc/core/*": [
        "app/core/*"
      ],
      "@sppc/shared/*": [
        "app/shared/*"
      ],
      "@sppc/finance/*": [
        "app/finance/*"
      ],
      "@sppc/config/*": [
        "app/config/*"
      ],
      "@sppc/organization/*": [
        "app/organization/*"
      ],
      "@sppc/admin/*": [
        "app/admin/*"
      ],
      "@sppc/env/*": [
        "environments/*"
      ]

    }
  }
}
