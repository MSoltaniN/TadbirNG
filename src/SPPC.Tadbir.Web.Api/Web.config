        <binding name="BasicHttpBinding_IDocumentState" />
        <binding name="BasicHttpBinding_IDocumentStateDecision" />
        <binding name="BasicHttpBinding_IDocumentStateTimeout" />
        <binding name="BasicHttpBinding_IDocumentStateService" />
      </basicHttpBinding>
    </bindings>
    <client>
      <endpoint address="http://localhost:3302/CartableService.xamlx" binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IDocumentStateBasic" contract="IDocumentStateBasic" name="BasicHttpBinding_IDocumentStateBasic" />
      <endpoint address="http://localhost:3302/CartableSMService.xamlx" binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IDocumentState" contract="IDocumentState" name="BasicHttpBinding_IDocumentState" />
