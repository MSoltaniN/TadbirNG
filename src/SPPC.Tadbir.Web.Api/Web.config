  </configSections>
  <connectionStrings>
    <add name="Tadbir" providerName="System.Data.SqlClient" connectionString="Data Source=DB-SERVER;Initial Catalog=TadbirDemo;User ID=sa;Password=Liberty@1447xYz;Integrated Security=False;" />
  </connectionStrings>
  <appSettings>
    <add key="webpages:Version" value="3.0.0.0" />
    <add key="webpages:Enabled" value="false" />
    <add key="ClientValidationEnabled" value="true" />
    <add key="UnobtrusiveJavaScriptEnabled" value="true" />
    <add key="MappingSource" value="SPPC.Tadbir.NHibernate" />
    <add key="Connection" value="Tadbir" />
    <!-- Transaction state workflow is configured to use State Machine implementation by default.
      Other available implementations are :
      * flowchart : Implemented by IDocumentStateDecision service contract, this workflow mode branches on transaction total value
                    to decide which role can confirm a transaction (less than 1,000,000 : CFO Assistant | more than 1,000,000 : CFO)
      * timeout : Implemented by IDocumentStateTimeout service contract, this workflow mode applies a demo timeout value (2 minutes)
                  to Review and Approve operations, meaning if not completed after this timeout, the work item moves to cartable for
                  next superior role in role hierarchy (for example : If not reviewed by Lead Accountant after timeout, the work item
                  is re-targeted to CFO Assistant role).
      * basic : Implemented by IDocumentStateBasic service contract, this workflow mode uses simple if/else branching to check
                for allowable state changes, meaning if a state change request is invalid (for example, confirming a prepared item),
                the workflow simply outputs a warning message to console and does nothing.
    -->
    <add key="StateWorkflowMode" value="" />
  </appSettings>
  <sppc.tadbir configSource="tadbir.config" />
  <system.web>
    <compilation debug="true" targetFramework="4.6" />
    <httpRuntime targetFramework="4.6" />
    <customErrors mode="Off" />
  </system.web>
  <system.webServer>
    <handlers>
      <remove name="ExtensionlessUrlHandler-Integrated-4.0" />
      <remove name="OPTIONSVerbHandler" />
      <remove name="TRACEVerbHandler" />
      <add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="*" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0" />
    </handlers>
  </system.webServer>
  <system.serviceModel>
    <bindings>
