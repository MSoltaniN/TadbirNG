      <endpoint address="http://localhost:3302/DocumentStateService.xamlx" binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IDocumentStateService" contract="IDocumentStateService" name="BasicHttpBinding_IDocumentStateService" />
    </client>
  </system.serviceModel>
