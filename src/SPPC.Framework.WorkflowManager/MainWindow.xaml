<Window x:Class="SPPC.Framework.WorkflowManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPPC.Framework.WorkflowManager"
        mc:Ignorable="d"
        Title="SPPC Workflow Manager Tool (v1.0)" Height="660" Width="800" WindowStartupLocation="CenterScreen">
    <Grid x:Name="grdMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu HorizontalAlignment="Stretch" Grid.Row="0">
            <MenuItem Header="_File" FontSize="14" >
                <MenuItem x:Name="cmdNewWorkflow" Header="_New Workflow" Click="NewWorkflow_Click"/>
                <MenuItem x:Name="cmdOpenWorkflow" Header="_Open Workflow" Click="OpenWorkflow_Click"/>
                <MenuItem x:Name="cmdSaveWorkflow" Header="_Save Workflow" Click="SaveWorkflow_Click"/>
                <MenuItem x:Name="cmdSaveWorkflowAs" Header="Save Workflow _As..." Click="SaveWorkflowAs_Click"/>
                <MenuItem x:Name="cmdExit" Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
